<?xml version="1.0" encoding="UTF-8"?>
<jayjax>
    <controller class="org.magnos.jayjax.UserController" name="UserController" javascript="true">
        <function action="/user/(\d+)" method="GET" invoke="getUser(#1)" />
        <function action="/user/profile/picture" method="POST" invoke="setProfilePicture(uploadedFile, description, tags, names)" />
        <function action="/user/complex" method="POST" invoke="complexMethod(words,user,flag)" />
    </controller>
</jayjax>